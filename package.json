{
  "name": "protal",
  "version": "1.0.0",
  "main": "index.js",
  "author": "yqrashawn <namy.19@gmail.com>",
  "license": "MIT",
  "scripts": {
    "watch:js": "chokidar 'src/**/*.js' './spack.config.js' 'config/spack.utils.js' --initial -c 'yarn run build:dev'",
    "dev": "concurrently --names watch:js,watch:non-js --prefix-colors blue,blue 'yarn run watch:js' 'yarn run watch:non-js'",
    "watch:non-js": "yarn run cp:non-js --watch",
    "cp:non-js": "node config/copy-none-js-file.js",
    "build:dev": "cross-env NODE_ENV=development spack",
    "build:prod": "cross-env NODE_ENV=production spack --mode production",
    "prod": "concurrently --names build:prod,cp:non-js --prefix-colors blue,blue 'yarn run build:prod' 'yarn run cp:non-js'",
    "lint": "eslint  --ignore-path .gitignore src config",
    "lint:fix": "yarn run lint --fix"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.27",
    "@swc/core": "^1.2.40",
    "browserslist": "^4.16.0",
    "chokidar": "^3.4.3",
    "chokidar-cli": "^2.1.0",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.0",
    "eslint-plugin-promise": "^4.2.1",
    "fs-extra": "^9.0.1",
    "husky": ">=4",
    "lint-staged": ">=10",
    "prettier": "^2.2.1"
  },
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 Firefox versions"
  ],
  "eslintConfig": {
    "extends": [
      "standard",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "globals": {
      "browser": "readonly"
    }
  },
  "dependencies": {
    "crx-hotreload": "^1.0.6",
    "ramda": "^0.27.1",
    "webextension-polyfill": "^0.7.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --cache --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
