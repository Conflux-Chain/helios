{
  "name": "conflux-portal",
  "private": true,
  "workspaces": ["packages/*"],
  "scripts": {
    "postinstall": "yarn run husky install",
    "compile:inpage": "swc --config-file scripts/inpage.swcrc.json -o packages/browser-extension/build/inpage/dist/index.js -s true packages/browser-extension/build/inpage/dist/index.js",
    "sp": "yarn node scripts/snowpack.js",
    "a": "cross-env NODE_ENV=development run-s before:all dev:popup",
    "before:all": "yarn node scripts/before_all.js",
    "after:prod": "yarn node scripts/after_prod.js",
    "dev:background": "yarn run dev-base --config scripts/snowpack.background.config.js",
    "dev:popup": "yarn run dev-base --config scripts/snowpack.popup.config.js",
    "dev:inpage": "yarn run dev-base --config scripts/snowpack.inpage.config.js",
    "dev-base": "yarn sp dev",
    "dev-all": "concurrently --kill-others --prefix-colors blue 'yarn:dev:*'",
    "dev": "cross-env NODE_ENV=development run-s before:all dev-all",
    "prod:background": "yarn run prod-base --config scripts/snowpack.background.config.js",
    "prod:popup": "yarn run prod-base --config scripts/snowpack.popup.config.js",
    "prod:inpage": "yarn run prod-base --config scripts/snowpack.inpage.config.js",
    "prod-base": "yarn sp build",
    "prod-all": "concurrently --prefix-colors green 'yarn:prod:*'",
    "prod": "cross-env NODE_ENV=production run-s before:all prod-all after:prod compile:inpage",
    "lint": "eslint  --ignore-path .gitignore packages",
    "lint:fix": "yarn run lint --fix",
    "test": "jest"
  },
  "devDependencies": {
    "@snowpack/plugin-dotenv": "^2.0.5",
    "@snowpack/plugin-react-refresh": "^2.4.0",
    "@swc/cli": "^0.1.34",
    "@swc/core": "^1.2.47",
    "@swc/jest": "^0.1.2",
    "browserslist": "^4.16.3",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-testing-library": "^3.10.1",
    "fs-extra": "^9.1.0",
    "husky": "^5.0.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "mustache": "^4.1.0",
    "ndb": "^1.1.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "ramda": "^0.27.1",
    "regenerator-runtime": "^0.13.7",
    "rimraf": "^3.0.2",
    "snowpack": "3.0.11"
  },
  "browserslist": ["last 2 Chrome versions", "last 2 Firefox versions"],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "prettier": {
    "semi": false,
    "bracketSpacing": false,
    "proseWrap": "never",
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "avoid",
    "overrides": [
      {
        "files": ".yarnrc.yml",
        "options": {
          "singleQuote": false
        }
      }
    ]
  },
  "lint-staged": {
    "*.{js,jsx}": ["eslint --cache --fix", "prettier --write"],
    "*.{json,md}": ["prettier --write"]
  }
}
