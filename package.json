{
  "name": "helios",
  "private": true,
  "workspaces": [
    "packages/rpcs/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=15"
  },
  "scripts": {
    "postinstall": "husky install",
    "compile:inpage": "swc --config-file scripts/inpage.swcrc.json -o packages/browser-extension/build/inpage/dist/index.js -s true packages/browser-extension/build/inpage/dist/index.js",
    "dev": "cross-env NODE_ENV=development node scripts/dev.js",
    "prod-all": "node scripts/prod.js",
    "prod": "cross-env NODE_ENV=production run-s prod-all compile:inpage",
    "lint": "eslint  --ignore-path .gitignore packages",
    "lint:fix": "yarn run lint --fix",
    "test": "cross-env NODE_ENV=test jest --no-cache"
  },
  "devDependencies": {
    "@snowpack/plugin-dotenv": "^2.0.5",
    "@snowpack/plugin-react-refresh": "^2.4.0",
    "@swc/cli": "^0.1.35",
    "@swc/core": "^1.2.50",
    "@swc/helpers": "^0.2.4",
    "@swc/jest": "^0.1.2",
    "browserslist": "^4.16.3",
    "concurrently": "^6.0.0",
    "cross-env": "^7.0.3",
    "dot-env": "^0.0.1",
    "dotenv-expand": "^5.1.0",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.2.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-testing-library": "^3.10.1",
    "fs-extra": "^9.1.0",
    "husky": "^5.1.3",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "mustache": "^4.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "ramda": "^0.27.1",
    "regenerator-runtime": "^0.13.7",
    "rimraf": "^3.0.2",
    "snowpack": "3.0.13"
  },
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 2 Edge versions"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "prettier": {
    "semi": false,
    "bracketSpacing": false,
    "proseWrap": "never",
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "avoid",
    "overrides": [
      {
        "files": ".yarnrc.yml",
        "options": {
          "singleQuote": false
        }
      }
    ]
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --cache --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
