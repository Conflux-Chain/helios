{
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "sp": "yarn node scripts/snowpack.js",
    "before:all": "node scripts/before_all.js",
    "after:prod": "node scripts/after_prod.js",
    "dev:background": "yarn run dev:base --config scripts/snowpack.background.config.js",
    "dev:popup": "yarn run dev:base --config scripts/snowpack.popup.config.js",
    "dev:inpage": "yarn run dev:base --config scripts/snowpack.inpage.config.js",
    "dev:base": "yarn sp dev",
    "dev": "yarn run before:all && concurrently --names dev:background,dev:popup,dev:inpage --prefix-colors blue,blue,blue 'yarn run dev:background' 'yarn run dev:popup' 'yarn run dev:inpage'",
    "prod:background": "yarn run prod:base --config scripts/snowpack.background.config.js",
    "prod:popup": "yarn run prod:base --config scripts/snowpack.popup.config.js",
    "prod:inpage": "yarn run prod:base --config scripts/snowpack.inpage.config.js",
    "prod:base": "yarn sp build",
    "prod": "yarn run before:all && concurrently --names prod:background,prod:popup,prod:inpage --prefix-colors blue,blue,blue 'yarn run prod:background' 'yarn run prod:popup' 'yarn run prod:inpage' && yarn run after:prod",
    "lint": "eslint  --ignore-path .gitignore app scripts",
    "lint:fix": "yarn run lint --fix"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.0",
    "eslint-plugin-promise": "^4.2.1",
    "fs-extra": "^9.0.1",
    "husky": ">=4",
    "lint-staged": ">=10",
    "mustache": "^4.1.0",
    "ndb": "^1.1.5",
    "prettier": "^2.2.1",
    "ramda": "^0.27.1",
    "rimraf": "^3.0.2",
    "snowpack": "2.17.1"
  },
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 Firefox versions"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "prettier": {
    "bracketSpacing": false,
    "proseWrap": "never",
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "avoid",
    "overrides": [
      {
        "files": ".yarnrc.yml",
        "options": {
          "singleQuote": false
        }
      }
    ]
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --cache --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "webextension-polyfill": "^0.7.0"
  }
}
